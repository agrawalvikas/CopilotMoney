# Copy this file to .env and replace the placeholder values with your actual credentials.

# --- PostgreSQL Database ---
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/copilot_money"

# --- Clerk Authentication ---
# Your Clerk secret key, found in Clerk Dashboard → API Keys.
CLERK_SECRET_KEY="sk_test_..."

# --- Teller.io API (Bank connections) ---
# Environment: sandbox | development | production
TELLER_ENV="sandbox"
# The full content of your teller.cert.pem file as a single line with \n for newlines.
TELLER_CERTIFICATE="-----BEGIN CERTIFICATE-----\nMIID...etc...\n-----END CERTIFICATE-----"
# The full content of your teller.key.pem file as a single line with \n for newlines.
TELLER_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...etc...\n-----END PRIVATE KEY-----"

# --- Plaid API (Bank connections) ---
# Client ID and Secret from Plaid Dashboard → Team Settings → Keys.
PLAID_CLIENT_ID="your_plaid_client_id"
PLAID_SECRET="your_plaid_secret"
# Environment: sandbox | development | production
PLAID_ENV="sandbox"

# --- Encryption ---
# A 32-byte (256-bit) key for encrypting stored access tokens.
# Generate with: openssl rand -hex 32
# IMPORTANT: Never change this after accounts are connected — tokens become unreadable.
ENCRYPTION_KEY="your_64_hex_character_key_here"

# --- CORS ---
# Comma-separated list of allowed frontend origins.
# Example for production: https://app.yourdomain.com
CORS_ORIGINS="http://localhost:3000"
